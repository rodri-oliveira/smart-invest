# Smart Invest - Configuracao de Ambiente
# Copie para .env e preencha com valores reais

# Ambiente
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///data/smart_invest.db
# DATABASE_URL=postgresql://user:pass@localhost/smart_invest  # Futuro PostgreSQL

# API Keys
BRAPI_TOKEN=sua_chave_brapi_aqui
BRAPI_BASE_URL=https://brapi.dev/api

# Opcionais - LLM para IA conversacional (Fase futura)
# ANTHROPIC_API_KEY=sua_chave_claude_aqui
# OPENAI_API_KEY=sua_chave_openai_aqui

# Seguranca (gerar com: openssl rand -hex 32)
SECRET_KEY=sua_chave_secreta_aqui_minimo_32_caracteres
AUTH_COOKIE_NAME=smart_invest_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# CORS (separe por virgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuracoes
CACHE_TTL_HOURS=1
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
